<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description"
    content="Buy high-quality oversized t-shirts in India. AsUsual offers trendy unisex graphic tees, cotton t-shirts for men & women. Free shipping on all orders. Shop now!">
  <meta name="keywords"
    content="asusual, asusua, asusual clothing, oversized t shirts india, ASUSUAL clothing, graphic tees india, cotton t shirts online, trendy streetwear india, buy t shirts online india">
  <title>Add-Testimonials</title>
  <!-- Favicons -->
  <link rel="icon" href="/assests/favicon.png" type="image/x-icon" sizes="any">
  <link rel="icon" href="/assests/favicon.svg" type="image/svg+xml">
  <link rel="apple-touch-icon" href="/assests/apple-touch-icon.png">
  <link rel="manifest" href="/assests/site.webmanifest">
  <meta name="theme-color" content="#ffffff">
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>

<body>
  <div class="min-h-screen flex flex-col md:flex-row">


    
  <%- include('../partials/admin-navbar', { activePage: activePage }) %>

    <!-- Main Content -->
    <main class="flex-1 p-8 flex flex-col items-center">
      <!-- Delivery Cost Form -->
      <section class="w-full max-w-xl bg-white p-6 rounded-xl shadow border mb-10">
        <h2 className="text-xl font-semibold text-gray-900 text-center mb-4">
          Set Delivery Cost
        </h2>
        <form method="POST" action="/admin/delivery-cost" class="space-y-4">
          <div>

            <label className="block text-gray-800 font-medium mb-2">
              Delivery Cost (â‚¹):
            </label>

            <input type="number" placeholder="Enter Delivery Cost"
              className="w-full border border-gray-400 rounded-lg p-2 text-black focus:outline-none focus:border-blue-500" />
          </div>
          <button type="submit" class="btn-primary w-full">Save</button>
        </form>
      </section>

      <!-- Add Category Form -->
      <!-- Add / Edit Category Form -->
      <section class="w-full max-w-xl bg-white p-6 rounded-xl shadow border mb-10">
        <h2 id="formTitle" class="text-2xl font-bold mb-6 text-center text-gray-900">Add New Category</h2>

        <form id="categoryForm" method="POST" action="/category/add-category" enctype="multipart/form-data"
          class="space-y-4">
          <input type="hidden" id="categoryId" name="categoryId" />

          <div>
            <label for="name" class="block font-medium mb-2 text-gray-800">Category Name:</label>
            <input type="text" id="name" name="name" placeholder="e.g. Oversized T-Shirts"
              class="w-full border border-gray-400 rounded-lg p-2 text-black focus:outline-none focus:border-blue-500"
              required />
          </div>

          <div>
            <label for="description" class="block font-medium mb-2 text-gray-800">Description (optional):</label>
            <textarea name="description" id="description" rows="3" placeholder="Brief description"
              class="w-full border border-gray-400 rounded-lg p-2 text-black focus:outline-none focus:border-blue-500"></textarea>
          </div>

          <div>
            <label for="image" class="block font-medium mb-2 text-gray-800">Category Image:</label>
            <input type="file" id="image" name="image" accept="image/*"
              class="w-full border border-gray-400 rounded-lg p-2 text-black focus:outline-none focus:border-blue-500" />
          </div>

          <button id="submitBtn" type="submit"
            class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition-all">
            Add Category
          </button>
        </form>
      </section>



      <!-- Category Table -->
      <!-- Category Table -->
      <section class="w-full max-w-3xl bg-white p-6 rounded-xl shadow border">
        <h3 class="text-xl font-semibold mb-4 text-gray-800 border-b pb-2 text-center">
          All Categories
        </h3>

        <% if (categories && categories.length> 0) { %>
          <div class="overflow-x-auto">
            <table class="min-w-full border border-gray-200 text-sm text-left">
              <thead class="bg-gray-100 text-gray-700 uppercase text-xs">
                <tr>
                  <th class="py-3 px-4 border-b">#</th>
                  <th class="py-3 px-4 border-b">Image</th>
                  <th class="py-3 px-4 border-b">Category Name</th>
                  <th class="py-3 px-4 border-b">Description</th>
                  <th class="py-3 px-4 border-b">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% categories.forEach((category, index)=> { %>
                  <tr class="hover:bg-gray-50">
                    <td class="py-3 px-4 border-b">
                      <%= index + 1 %>
                    </td>
                    <td class="py-3 px-4 border-b">
                      <img src="<%= category.Image %>" alt="Category Image" class="w-16 h-16 object-cover rounded-lg" />
                    </td>
                    <td class="py-3 px-4 border-b font-medium">
                      <%= category.name %>
                    </td>
                    <td class="py-3 px-4 border-b text-gray-600">
                      <%= category.description || '-' %>
                    </td>
                    <td class="py-3 px-4 border-b">
                      <button class="bg-green-600 text-white px-3 py-1 rounded hover:bg-green-700 transition"
                        onclick="editCategory('<%= category._id %>', '<%= category.name %>', '<%= category.description || '' %>', '<%= category.Image %>')">
                        Edit
                      </button>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
            </table>
          </div>
          <% } else { %>
            <p class="text-gray-500 italic text-sm text-center">No categories added yet.</p>
            <% } %>
      </section>

    </main>

    <!-- Reusable Tailwind Styles -->
    <style>
      .nav-link {
        @apply flex items-center gap-2 p-3 rounded-lg hover:bg-indigo-700 transition;
      }

      .nav-link.active {
        @apply bg-indigo-700;
      }

      .input-field {
        @apply w-full border border-gray-300 p-2 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500;
      }

      .btn-primary {
        @apply bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition;
      }

      .btn-success {
        @apply bg-green-600 text-white py-2 rounded-md hover:bg-green-700 transition;
      }
    </style>

    <script>
      function handleLogout() {
        if (confirm("Are you sure you want to log out?")) {
          window.location.href = "/logout";
        }
      }
    </script>
    <script>
      function editCategory(id, name, description, imageUrl) {
        document.getElementById("formTitle").textContent = "Edit Category";
        document.getElementById("submitBtn").textContent = "Update Category";
        document.getElementById("categoryId").value = id;
        document.getElementById("name").value = name;
        document.getElementById("description").value = description;

        const form = document.getElementById("categoryForm");
        form.action = `/category/edit/${id}`;
        form.method = "POST";
        form.enctype = "multipart/form-data";
      }
    </script>


</body>

</html>