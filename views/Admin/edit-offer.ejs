<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Edit Offer - <%= offer.name %>
  </title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #fafafa;
      padding: 20px;
    }

    h1 {
      color: #333;
    }

    form {
      background: #fff;
      padding: 20px;
      border-radius: 10px;
      width: 650px;
      margin-top: 20px;
      box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
    }

    label {
      display: block;
      margin-top: 10px;
      font-weight: bold;
    }

    select,
    input {
      width: 100%;
      padding: 8px;
      margin-top: 5px;
    }

    button {
      margin-top: 20px;
      padding: 10px 20px;
      background: #007bff;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
    }

    button:hover {
      background: #0056b3;
    }

    .product-selector {
      display: flex;
      align-items: center;
      margin-top: 10px;
      gap: 10px;
    }

    .product-selector img {
      height: 50px;
      width: 50px;
      object-fit: cover;
      border-radius: 6px;
      border: 1px solid #ccc;
    }
  </style>
</head>

<body>
  <div>

    <%- include('../partials/admin-navbar', { activePage: activePage }) %>
    <%- include('../partials/flash') %>

      <h1>Edit Offer</h1>

      <form action="/offers/edit/<%= offer._id %>" method="POST">
        <label for="name">Offer Name</label>
        <input type="text" id="name" name="name" value="<%= offer.name %>" required />

        <label>Offer Products</label>
        <div id="productContainer">
          <% offer.productIds.forEach((prod, index)=> { %>
            <div class="product-selector">
              <select name="productIds[]" required>
                <% products.forEach(product=> { %>
                  <option value="<%= product._id %>" <%=prod._id.toString()===product._id.toString() ? 'selected' : ''
                    %>>
                    <%= product.name %> - ‚Çπ<%= product.price %>
                  </option>
                  <% }) %>
              </select>
              <img src="<%= prod.front_image %>" alt="<%= prod.name %>" />
              <button type="button" onclick="removeProduct(this)">‚ùå</button>
            </div>
            <% }) %>
        </div>

        <button type="button" onclick="addProduct()">‚ûï Add Product</button>

        <label for="minQuantity">Minimum Quantity</label>
        <input type="number" id="minQuantity" name="minQuantity" value="<%= offer.minQuantity %>" required />

        <label for="offerType">Offer Type</label>
        <select id="offerType" name="offerType" required onchange="toggleOfferValue()">
          <option value="free_item" <%=offer.offerType==="free_item" ? "selected" : "" %>>Free Item</option>
          <option value="flat_discount" <%=offer.offerType==="flat_discount" ? "selected" : "" %>>Flat Discount</option>
          <option value="percentage_discount" <%=offer.offerType==="percentage_discount" ? "selected" : "" %>>Percentage
            Discount</option>
        </select>

        <div id="offerValueContainer" style="<%= offer.offerType === 'free_item' ? 'display:none;' : '' %>">
          <label for="offerValue">Offer Value (‚Çπ or %)</label>
          <input type="number" id="offerValue" name="offerValue" value="<%= offer.offerValue || '' %>" />
        </div>

        <label for="freeProductId">Free Product (optional)</label>
        <select id="freeProductId" name="freeProductId">
          <option value="">-- None --</option>
          <% products.forEach(product=> { %>
            <option value="<%= product._id %>" <%=offer.freeProductId &&
              offer.freeProductId._id.toString()===product._id.toString() ? "selected" : "" %>>
              <%= product.name %>
            </option>
            <% }) %>
        </select>

        <label for="expiryDate">Expiry Date</label>
        <input type="date" id="expiryDate" name="expiryDate"
          value="<%= new Date(offer.expiryDate).toISOString().split('T')[0] %>" required />

        <button type="submit">üíæ Save Changes</button>
      </form>

  </div>
  <script>
    const products = <% - JSON.stringify(products) %>;

    function addProduct() {
      const container = document.getElementById("productContainer");
      const div = document.createElement("div");
      div.classList.add("product-selector");

      const select = document.createElement("select");
      select.name = "productIds[]";
      select.required = true;

      select.innerHTML = products.map(p =>
        `<option value="${p._id}">${p.name} - ‚Çπ${p.price}</option>`
      ).join("");

      const img = document.createElement("img");
      img.src = products[0].front_image;
      img.alt = products[0].name;

      select.addEventListener("change", () => {
        const selected = products.find(p => p._id === select.value);
        img.src = selected ? selected.front_image : "";
      });

      const removeBtn = document.createElement("button");
      removeBtn.type = "button";
      removeBtn.textContent = "‚ùå";
      removeBtn.onclick = () => div.remove();

      div.appendChild(select);
      div.appendChild(img);
      div.appendChild(removeBtn);
      container.appendChild(div);
    }

    function removeProduct(btn) {
      btn.parentElement.remove();
    }

    function toggleOfferValue() {
      const type = document.getElementById("offerType").value;
      const valueContainer = document.getElementById("offerValueContainer");
      valueContainer.style.display = type === "free_item" ? "none" : "block";
    }
  </script>
</body>

</html>