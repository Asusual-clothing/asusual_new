<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Edit Offer - <%= offer.name %></title>

  <!-- Tailwind -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

  <style>
    .product-selector img {
      height: 50px;
      width: 50px;
      object-fit: cover;
      border-radius: 6px;
      border: 1px solid #ccc;
    }

    .product-selector {
      display: flex;
      align-items: center;
      gap: 10px;
      margin-top: 10px;
    }
  </style>
</head>

<body class="bg-gray-100 flex">

  <!-- LEFT SIDEBAR (PARTIAL) -->
  <%- include('../partials/admin-navbar', { activePage: activePage }) %>
  
  <!-- MAIN CONTENT -->
  <div class="flex-1 p-10">

    <h1 class="text-3xl font-bold mb-6 text-gray-800">Edit Offer</h1>

    <%- include('../partials/flash') %>

    <form action="/offers/edit/<%= offer._id %>" method="POST"
      class="bg-white p-6 rounded-lg shadow-md w-full max-w-2xl">

      <!-- Offer Name -->
      <label class="font-semibold">Offer Name</label>
      <input type="text" name="name" value="<%= offer.name %>" required
        class="w-full p-2 border rounded mt-1" />

      <!-- Products -->
      <label class="font-semibold mt-4 block">Offer Products</label>
      <div id="productContainer">
        <% offer.productIds.forEach((prod) => { %>
          <div class="product-selector">
            <select name="productIds[]" required class="p-2 border rounded w-full">
              <% products.forEach(product=> { %>
                <option value="<%= product._id %>"
                  <%= prod._id.toString() === product._id.toString() ? "selected" : "" %>>
                  <%= product.name %> - ‚Çπ<%= product.price %>
                </option>
              <% }) %>
            </select>

            <img src="<%= prod.front_image %>" alt="<%= prod.name %>" />

            <button type="button" onclick="removeProduct(this)"
              class="px-2 text-red-600 text-xl">‚ùå</button>
          </div>
        <% }) %>
      </div>

      <button type="button" onclick="addProduct()"
        class="mt-3 bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded">
        ‚ûï Add Product
      </button>

      <!-- Minimum Quantity -->
      <label class="font-semibold mt-4 block">Minimum Quantity</label>
      <input type="number" name="minQuantity" value="<%= offer.minQuantity %>" required
        class="w-full p-2 border rounded" />

      <!-- Offer Type -->
      <label class="font-semibold mt-4 block">Offer Type</label>
      <select id="offerType" name="offerType" required onchange="toggleOfferValue()"
        class="w-full p-2 border rounded">
        <option value="free_item" <%= offer.offerType === "free_item" ? "selected" : "" %>>Free Item</option>
        <option value="flat_discount" <%= offer.offerType === "flat_discount" ? "selected" : "" %>>Flat Discount</option>
        <option value="percentage_discount" <%= offer.offerType === "percentage_discount" ? "selected" : "" %>>Percentage Discount</option>
      </select>

      <!-- Offer Value (hidden if free item) -->
      <div id="offerValueContainer" class="mt-3"
        style="<%= offer.offerType === 'free_item' ? 'display:none;' : '' %>">
        <label class="font-semibold">Offer Value</label>
        <input type="number" name="offerValue" value="<%= offer.offerValue || '' %>"
          class="w-full p-2 border rounded" />
      </div>

      <!-- Free Product -->
      <label class="font-semibold mt-4 block">Free Product (optional)</label>
      <select name="freeProductId" class="w-full p-2 border rounded">
        <option value="">-- None --</option>
        <% products.forEach(product=> { %>
          <option value="<%= product._id %>"
            <%= offer.freeProductId && offer.freeProductId._id.toString() === product._id.toString() ? "selected" : "" %>>
            <%= product.name %>
          </option>
        <% }) %>
      </select>

      <!-- Expiry Date -->
      <label class="font-semibold mt-4 block">Expiry Date</label>
      <input type="date" name="expiryDate"
        value="<%= new Date(offer.expiryDate).toISOString().split('T')[0] %>"
        required class="w-full p-2 border rounded" />

      <!-- Submit -->
      <button type="submit"
        class="mt-6 bg-blue-600 hover:bg-blue-700 text-white px-5 py-2 rounded w-full">
        üíæ Save Changes
      </button>

    </form>
  </div>

  <script>
    const products = <%- JSON.stringify(products) %>;

    function addProduct() {
      const container = document.getElementById("productContainer");
      const div = document.createElement("div");
      div.classList.add("product-selector");

      const select = document.createElement("select");
      select.name = "productIds[]";
      select.required = true;
      select.className = "p-2 border rounded w-full";
      select.innerHTML = products.map(p =>
        `<option value="${p._id}">${p.name} - ‚Çπ${p.price}</option>`
      ).join("");

      const img = document.createElement("img");
      img.src = products[0].front_image;

      select.addEventListener("change", () => {
        const selected = products.find(p => p._id === select.value);
        img.src = selected ? selected.front_image : "";
      });

      const removeBtn = document.createElement("button");
      removeBtn.type = "button";
      removeBtn.textContent = "‚ùå";
      removeBtn.className = "px-2 text-red-600 text-xl";
      removeBtn.onclick = () => div.remove();

      div.appendChild(select);
      div.appendChild(img);
      div.appendChild(removeBtn);

      container.appendChild(div);
    }

    function removeProduct(btn) {
      btn.parentElement.remove();
    }

    function toggleOfferValue() {
      const type = document.getElementById("offerType").value;
      document.getElementById("offerValueContainer").style.display =
        type === "free_item" ? "none" : "block";
    }
  </script>

</body>
</html>
