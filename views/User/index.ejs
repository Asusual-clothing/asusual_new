              function setupCardClickBehavior() {
                const isMobile = /iPhone|iPad|iPod|Android/i.test(
                  navigator.userAgent
                );
                const screenWidth = window.innerWidth;

                console.log("Screen width:", screenWidth);
                console.log("isMobile (based on user agent):", isMobile);

                document.querySelectorAll(".card").forEach((card) => {
                  if (isMobile || screenWidth <= 768) {
                    // Mobile behavior (or small screen in inspect)
                    card.addEventListener("click", (e) => {
                      if (e.target.classList.contains("buy")) return;

                      if (!card.classList.contains("flipped")) {
                        console.log("Flipping card...");
                        card.classList.add("flipped");
                      } else {
                        console.log("Navigating to product detail...");
                        const url = card.getAttribute("data-url");
                        window.location.href = url;
                      }
                    });
                  } else {
                    // Desktop behavior
                    card.addEventListener("click", (e) => {
                      if (e.target.classList.contains("buy")) return;

                      const url = card.getAttribute("data-url");
                      console.log("Desktop click: navigating to", url);
                      window.location.href = url;
                    });
                  }
                });
              }

              document.addEventListener("DOMContentLoaded", setupCardClickBehavior);
