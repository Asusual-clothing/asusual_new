    .container {
      display: flex;
      justify-content: center;
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
    }

    .slides li:first-child {
      opacity: 1;
      z-index: 1;
    }

    .slides li:target~li:first-child {
      opacity: 0;
      z-index: 0;
    }

    .thumbnails {
      display: flex;
      flex-direction: column;
      width: 150px;

      li {
        list-style: none;
        transition: transform 0.3s ease;

        &:hover {
          transform: scale(1.05);
        }
      }

      a {
        display: block;
        border: 2px solid transparent;
        transition: border-color 0.3s ease;
      }

      img {
        width: 100%;
        height: 100px;
        object-fit: fill;
        object-position: center;
        border-radius: 4px;
        cursor: pointer;
        filter: grayscale(100%);
      }

      a:hover img {
        filter: grayscale(0%);
      }
    }

    .slides {
      position: relative;
      width: 600px;
      height: 510px;
      overflow: hidden;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);

      li {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        opacity: 0;
        transition: opacity 0.5s ease-in-out;

        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
          object-position: center;
        }
      }

      li:target {
        opacity: 1;
        z-index: 2;
      }

      .slide-content {
        position: absolute;
        bottom: 20px;
        left: 0;
        right: 0;
        text-align: center;
        z-index: 3;
      }

      .buy {
        display: inline-block;
        padding: 12px 30px;
        background-color: #860505;
        color: black;
        text-decoration: none;
        font-weight: bold;
        border-radius: 30px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);

        &:hover {
          background-color: #620404;
          transform: translateY(-2px);
          box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
        }
      }
    }

    @media (max-width: 768px) {
      .container {
        flex-direction: column;
        align-items: center;
      }

      .thumbnails {
        flex-direction: row;
        width: 100%;
        order: 2;
        margin-top: 15px;
        filter: grayscale(100%);

        img {
          height: 80px;
        }
      }

      .slides {
        width: 100%;
        height: 300px;
        order: 1;

        .buy {
          padding: 8px 20px;
          font-size: 14px;
        }
      }
