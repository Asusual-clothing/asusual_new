<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description"
    content="Buy high-quality oversized t-shirts in India. AsUsual offers trendy unisex graphic tees, cotton t-shirts for men & women. Free shipping on all orders. Shop now!">
  <meta name="keywords"
    content="asusual, asusua, asusual clothing, oversized t shirts india, ASUSUAL clothing, graphic tees india, cotton t shirts online, trendy streetwear india, buy t shirts online india">
  <title>Add-Testimonials</title>
  <!-- Favicons -->
  <link rel="icon" href="/assests/favicon.png" type="image/x-icon" sizes="any">
  <link rel="icon" href="/assests/favicon.svg" type="image/svg+xml">
  <link rel="apple-touch-icon" href="/assests/apple-touch-icon.png">
  <link rel="manifest" href="/assests/site.webmanifest">
  <meta name="theme-color" content="#ffffff">
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>

<body>
  <div class="min-h-screen flex flex-col md:flex-row">


    <div class="bg-indigo-800 text-white w-full md:w-64 p-4">
      <div class="mb-8 p-4 border-b border-indigo-700">
        <h1 class="text-2xl font-bold">Admin Dashboard</h1>
        <p class="text-indigo-300 text-sm">AsUsual</p>
      </div>

      <nav class="space-y-2">
        <a href="/products/add-product" class="flex items-center space-x-2 p-3 rounded-lg bg-indigo-700 transition">
          <i class="fas fa-plus w-5"></i>
          <span>Add Product</span>
        </a>
        <a href="/products/edit-product"
          class="flex items-center space-x-2 p-3 rounded-lg hover:bg-indigo-700 transition">
          <i class="fas fa-edit w-5"></i>
          <span>Edit Quantity</span>
        </a>
        <a href="/posters/edit-poster"
          class="flex items-center space-x-2 p-3 rounded-lg hover:bg-indigo-700 transition">
          <i class="fas fa-image w-5"></i>
          <span>Edit Posters</span>
        </a>
        <a href="/coupons" class="flex items-center space-x-2 p-3 rounded-lg hover:bg-indigo-700 transition">
          <i class="fas fa-tag w-5"></i>
          <span>Add Coupon</span>
        </a>
        <a href="/admin/contacts" class="flex items-center space-x-2 p-3 rounded-lg hover:bg-indigo-700 transition">
          <i class="fas fa-envelope w-5"></i>
          <span>Contact Requests</span>
        </a>
        <a href="/orders" class="flex items-center space-x-2 p-3 rounded-lg hover:bg-indigo-700 transition">
          <i class="fas fa-shopping-bag w-5"></i>
          <span>Orders</span>
        </a>
        <a href="/admin/testimonials" class="flex items-center space-x-2 p-3 rounded-lg hover:bg-indigo-700 transition">
          <i class="fas fa-shopping-bag w-5"></i>
          <span>Testimonial</span>
        </a>
        <a href="/admin/delivery-cost"
          class="flex items-center space-x-2 p-3 rounded-lg hover:bg-indigo-700 transition">
          <i class="fas fa-shopping-bag w-5"></i>
          <span>Delivery Charge</span>
        </a>
      </nav>

      <div class="mt-auto pt-4 border-t border-indigo-700">
        <button onclick="handleLogout()"
          class="flex items-center space-x-2 w-full p-3 rounded-lg hover:bg-indigo-700 transition text-red-300 hover:text-red-200">
          <i class="fas fa-sign-out-alt w-5"></i>
          <span>Logout</span>
        </button>
      </div>
    </div>

    <!-- Main Content -->
    <main class="flex-1 p-8 flex flex-col items-center">
      <!-- Delivery Cost Form -->
      <section class="w-full max-w-xl bg-white p-6 rounded-xl shadow border mb-10">
        <h2 className="text-xl font-semibold text-gray-900 text-center mb-4">
          Set Delivery Cost
        </h2>
        <form method="POST" action="/admin/delivery-cost" class="space-y-4">
          <div>

            <label className="block text-gray-800 font-medium mb-2">
              Delivery Cost (â‚¹):
            </label>

            <input type="number" placeholder="Enter Delivery Cost"
              className="w-full border border-gray-400 rounded-lg p-2 text-black focus:outline-none focus:border-blue-500" />
          </div>
          <button type="submit" class="btn-primary w-full">Save</button>
        </form>
      </section>

      <!-- Add Category Form -->
      <section class="w-full max-w-xl bg-white p-6 rounded-xl shadow border mb-10">
        <h2 class="text-2xl font-bold mb-6 text-center text-gray-900">Add New Category</h2>

        <form method="POST" action="/category/add-category" class="space-y-4">
          <div>
            <label for="name" class="block font-medium mb-2 text-gray-800">
              Category Name:
            </label>
            <input type="text" id="name" name="name" placeholder="e.g. Oversized T-Shirts"
              class="w-full border border-gray-400 rounded-lg p-2 text-black focus:outline-none focus:border-blue-500"
              required />
          </div>

          <div>
            <label for="description" class="block font-medium mb-2 text-gray-800">
              Description (optional):
            </label>
            <textarea name="description" id="description" rows="3" placeholder="Brief description"
              class="w-full border border-gray-400 rounded-lg p-2 text-black focus:outline-none focus:border-blue-500"></textarea>
          </div>

          <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition-all">
            Add Category
          </button>
        </form>
      </section>


      <!-- Category Table -->
      <section class="w-full max-w-3xl bg-white p-6 rounded-xl shadow border">
        <h3 class="text-xl font-semibold mb-4 text-gray-800 border-b pb-2 text-center">
          All Categories
        </h3>

        <% if (categories && categories.length> 0) { %>
          <div class="overflow-x-auto">
            <table class="min-w-full border border-gray-200 text-sm text-left">
              <thead class="bg-gray-100 text-gray-700 uppercase text-xs">
                <tr>
                  <th class="py-3 px-4 border-b">#</th>
                  <th class="py-3 px-4 border-b">Category Name</th>
                  <th class="py-3 px-4 border-b">Description</th>
                </tr>
              </thead>
              <tbody>
                <% categories.forEach((category, index)=> { %>
                  <tr class="hover:bg-gray-50">
                    <td class="py-3 px-4 border-b">
                      <%= index + 1 %>
                    </td>
                    <td class="py-3 px-4 border-b font-medium">
                      <%= category.name %>
                    </td>
                    <td class="py-3 px-4 border-b text-gray-600">
                      <%= category.description || '-' %>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
            </table>
          </div>
          <% } else { %>
            <p class="text-gray-500 italic text-sm text-center">No categories added yet.</p>
            <% } %>
      </section>
    </main>

    <!-- Reusable Tailwind Styles -->
    <style>
      .nav-link {
        @apply flex items-center gap-2 p-3 rounded-lg hover:bg-indigo-700 transition;
      }

      .nav-link.active {
        @apply bg-indigo-700;
      }

      .input-field {
        @apply w-full border border-gray-300 p-2 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500;
      }

      .btn-primary {
        @apply bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition;
      }

      .btn-success {
        @apply bg-green-600 text-white py-2 rounded-md hover:bg-green-700 transition;
      }
    </style>

    <script>
      function handleLogout() {
        if (confirm("Are you sure you want to log out?")) {
          window.location.href = "/logout";
        }
      }
    </script>

</body>

</html>