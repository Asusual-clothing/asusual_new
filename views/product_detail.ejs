  <script>
    // ===============================
    // 🟡 SYNC SELECTED COLOR
    // ===============================
    const colorSelect = document.getElementById("color-select");
    if (colorSelect) {
      colorSelect.addEventListener("change", () => {
        const selectedColorInput = document.getElementById("selected-color");
        selectedColorInput.value = colorSelect.value.trim();
      });
    }

    // ===============================
    // 🟡 HAMBURGER MENU TOGGLE
    // ===============================
    const AsHamburger = document.querySelector(".As-hamburger");
    const AsNavLinks = document.querySelector(".As-nav-links");
    if (AsHamburger && AsNavLinks) {
      AsHamburger.addEventListener("click", () => {
        AsNavLinks.classList.toggle("active");
      });
    }

    // ===============================
    // 🟡 SIZE SELECTION LOGIC
    // ===============================
    function selectSize(size) {
      const selectedSizeInput = document.getElementById("selected-size");
      const allButtons = document.querySelectorAll(".size-button");

      // Update hidden input
      selectedSizeInput.value = size;

      // Highlight active button
      allButtons.forEach((button) => button.classList.remove("selected"));
      const selectedButton = document.querySelector(`.size-button[data-size="${size}"]`);
      if (selectedButton) selectedButton.classList.add("selected");

      // Update quantity limit
      updateMaxQuantity(size);
    }

    // ===============================
    // 🟡 UPDATE MAX QUANTITY
    // ===============================
    function updateMaxQuantity(size) {
      const sizeStock = {
        XS: <%= product.sizes.xsmall || 0 %>,
        S: <%= product.sizes.small || 0 %>,
        M: <%= product.sizes.medium || 0 %>,
        L: <%= product.sizes.large || 0 %>,
        XL: <%= product.sizes.xlarge || 0 %>,
        XXL: <%= product.sizes.xxlarge || 0 %>,
      };

      const maxQuantity = sizeStock[size] || 0;
      const quantityInput = document.getElementById("quantity");
      const quantityMessage = document.getElementById("quantity-message");
      const currentQuantity = parseInt(quantityInput.value);

      if (currentQuantity > maxQuantity) {
        quantityInput.value = maxQuantity;
        quantityMessage.textContent = `Maximum ${maxQuantity} items available in this size.`;
        quantityMessage.style.display = "block";
      } else {
        quantityMessage.style.display = "none";
      }
    }

    // ===============================
    // 🟡 CHANGE QUANTITY (with stock check)
    // ===============================
    function changeQuantity(change) {
      const selectedSize = document.getElementById("selected-size").value;
      const quantityMessage = document.getElementById("quantity-message");
      const quantityInput = document.getElementById("quantity");

      if (!selectedSize) {
        quantityMessage.textContent = "Please select a size first.";
        quantityMessage.style.display = "block";
        return;
      }

      const sizeStock = {
        XS: <%= product.sizes.xsmall || 0 %>,
        S: <%= product.sizes.small || 0 %>,
        M: <%= product.sizes.medium || 0 %>,
        L: <%= product.sizes.large || 0 %>,
        XL: <%= product.sizes.xlarge || 0 %>,
        XXL: <%= product.sizes.xxlarge || 0 %>,
      };

      const maxQuantity = sizeStock[selectedSize] || 0;
      let current = parseInt(quantityInput.value);

      if (change === -1 && current > 1) {
        current--;
        quantityMessage.style.display = "none";
      } else if (change === 1) {
        if (current >= maxQuantity) {
          quantityMessage.textContent = `Maximum ${maxQuantity} items available in this size.`;
          quantityMessage.style.display = "block";
          return;
        }
        current++;
        quantityMessage.style.display = "none";
      }

      quantityInput.value = current;
    }

    // ===============================
    // 🟡 ADD EVENT LISTENERS TO SIZE BUTTONS
    // ===============================
    document.querySelectorAll(".size-button").forEach((button) => {
      button.addEventListener("click", () => {
        const size = button.getAttribute("data-size");
        selectSize(size);
      });
    });

    // ===============================
    // 🟡 FORM VALIDATION ON SUBMIT
    // ===============================
    const addToCartForm = document.querySelector("form");
    if (addToCartForm) {
      addToCartForm.addEventListener("submit", (event) => {
        const selectedSize = document.getElementById("selected-size").value;
        const selectedColor = document.getElementById("selected-color").value;
        const quantity = parseInt(document.getElementById("quantity").value);

        if (!selectedColor) {
          event.preventDefault();
          alert("Please select a color before adding to cart.");
          return;
        }
        if (!selectedSize) {
          event.preventDefault();
          alert("Please select a size before adding to cart.");
          return;
        }
        if (isNaN(quantity) || quantity < 1) {
          event.preventDefault();
          alert("Please select a valid quantity.");
        }
      });
    }

    // ===============================
    // 🟡 PRODUCT IMAGE GALLERY
    // ===============================
    function toggleImage(index) {
      const displayImage = document.querySelector(".display_image img");
      const galleryImages = document.querySelectorAll(".change_image img");
      if (displayImage && galleryImages[index]) {
        displayImage.src = galleryImages[index].src;
      }
    }

    // Initialize default image
    toggleImage(0);

    // Add click event for thumbnails
    document.querySelectorAll(".change_image img").forEach((img, index) => {
      img.addEventListener("click", () => toggleImage(index));
    });
  </script>

